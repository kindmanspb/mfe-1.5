{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules"]
}
